{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch rcopy",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/chero/Networks/tcpUdpCode_v2/rcopy",
            "args": ["/home/chero/Networks/tcpUdpCode_v2/flowers.bmp", "/home/chero/Networks/tcpUdpCode_v2/flow.bmp", "200", "1400", "0.4", "localhost", "5000"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch server",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/chero/Networks/tcpUdpCode_v2/server",
            "args": ["0.0", "5000"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": ["(gdb) Launch rcopy", "(gdb) Launch server"]
        }
    ]
}